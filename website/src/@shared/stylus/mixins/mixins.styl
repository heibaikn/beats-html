//圆角
borr(arguments)
	border-radius arguments

//动画
transition()
	transition arguments

animate()
	animation arguments 

//定位
rel()
	position relative
-pos(type,args)
	i = 0
	position     : unquote(type)
	{args[i]}    : args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i+=1]} : args[i + 1] is a 'unit' ? args[i += 1] : 0
-pos3(type,args)
	i = 0
	position     : unquote(type)
	{args[i]}    : args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i+=1]} : args[i + 1] is a 'unit' ? args[i += 1] : 0
	{args[i+=1]} : args[i + 1] is a 'unit' ? args[i += 1] : 0
	
abs()
	-pos('absolute', arguments)
abs3()
	-pos3('absolute', arguments)
absolute()
	-pos('absolute', arguments)
fixed()
	-pos('fixed', arguments)
z(n)
	z-index n
fs(n)
	font-size: n
fw(n)
	font-weight n
cur()
	cursor pointer
rect(w, h)
	width w
	height h

/* 
  宽高
 */
w(w)
	width w
h(h)
	height h
wh(w, h)
	width w
	height h
whh(w, h)
	width w
	height h
	line-height h
maxw(n)
	max-width n
maxh(n)
	max-height n
full()
	wh 100% 100%

/* 
  行高
 */
lh(n)
	line-height n
lhh(n)
	line-height n
	height n
db()
	display block
dib()
	display inline-block
hide()
	display none
ov()
	overflow hidden
tc()
	text-align center
tr()
	text-align right

/* 
  边框
 */
bor()
	border arguments
borl()
	border-left arguments
bort()
	border-top arguments
borb()
	border-bottom arguments

/* 
  padding 内间距
 */
pad()
	padding arguments
pt(n)
	padding-top n
pr(n)
	padding-right n
pb(n)
	padding-bottom n
pl(n)
