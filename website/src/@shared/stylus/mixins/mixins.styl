/* 
  margin 外间距
 */
mar()
	margin arguments
mt(n)
	margin-top n
mr(n)
	margin-right n
mb(n)
	margin-bottom n
ml(n)
	margin-left n
fl()
	float left
fr()
	float right

/*
  不换行
*/
notwrap()
	white-space nowrap

/*
  强制换行
*/
wrap()
	word-wrap  break-word
	word-break normal

/* 
  box 盒子模型
 */
contbox()
	box-sizing content-box
borbox()
	box-sizing border-box

/* 
  flex
 */
flex-center()
	display flex
	justify-content center
	align-content center
	align-items center


/* 
  背景图片
 */
bg(src)
	background url(src) no-repeat
bg-c(src)
	background url(src) no-repeat center 0
bg-x()
	background-repeat repeat-x
bg-y()
	background-repeat repeat-y
bg-center()
	background-position center
bg-r()
	background-position right
bg-p()
	background-position arguments
maskimg(src)
	-webkit-mask-image: url(src);
bgsize(val)
	if val == 1
		background-size contain
	else if val == 2
		background-size cover
	else 
		background-size val
bgcolor(color)
	background-color color
btn(ww, hh)
	cur()
	tc()
	dib()
	whh ww hh
	borr 4px
	if arguments[2] == 1
		background-size contain
	else if arguments[2] == 2
		background-size cover
	else 
		background-size inherit

/*
  变形
*/
rot(n)
	transform rotate(n)
	
/*
  css三角
*/
sj-t(n1, n2, color)
	wh 0 0
	db()
	border-left n1 solid transparent
	border-right n1 solid transparent
	border-bottom n2 solid color
sj-b(n1, n2, color)
	wh 0 0
	db()
	border-left n1 solid transparent
	border-right n1 solid transparent
	border-top n2 solid color
	
