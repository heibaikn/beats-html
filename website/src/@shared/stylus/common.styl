@import './base/color.styl';
@import './base/font.styl';
@import './mixins/mixins.styl';
@import './components/button.styl';

*
	padding 0
	margin 0
	box-sizing border-box

html
	font-size 16px

body
	font 16px "NeuzeitGro", "Helvetica Neue", "Helvetica", sans-serif;
	color #4d4d4d
	background #f7f8fa

ul li, ol, li
	list-style  none
img
	border 0
	max-width 100%
a
	text-decoration none
	// color inherit
small 
	font-size inherit
input
button
textarea
	outline none
	font-family "微软雅黑"


support-for-ie ?= true
vendor-prefixes ?= webkit khtml moz o ms official

/*=== 公用Class ==*/
.fl
	float left
.fr
	float right
.cur 
	cursor pointer
.rel
	position relative
.tc 
	text-align center
.dis
	dib()
.clear
	clear both
.clear:after
	content ''
	display table
	clear both

.flexbox
	display flex
	> *
		display block
	.col1
		width 100%
	.col2
		width 50%
	.col3
		width 33.3333%
	.col4
		width 20%
	flex()


