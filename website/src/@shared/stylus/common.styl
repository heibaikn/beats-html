/*=== 公用 动画 ==*/
@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1

@keyframes fadeOut
	0%
		opacity 1
	100%
		opacity 0

@keyframes translateY
	0%
		transform translateY(10px)
	100%
		transform translateY(0)

@keyframes scaleToBig
	0%
		transform scale(1.2)
		animation-timing-function cubic-bezier(0.31, 0.31, 0.63, 1.22)
		opacity 0
	100%
		transform scale(1)
		opacity 1

@keyframes toScale
	0%
		transform scale(1)
	100%
		transform scale(1.2)

@keyframes scaleToMin
	0%
		transform scale(1)
		opacity 1
	100%
		transform scale(0.3)
		opacity 0

@keyframes rotate360
	0%
		transform rotate(0)
	100%
		transform rotate(360deg)
