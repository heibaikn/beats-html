.flex-center
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;


body
  pt 1rem
  max-width 640px
  margin 0 auto

.body-section
  h 100%

.header-holder
  position: fixed;
  left 0 
  right 0
  top 0
  h 1rem
  z-index 99
  user-select: none;
  background: #181818;
  overflow hidden
  max-width 640px
  margin 0 auto

  transition: background .36s cubic-bezier(0.32, 0.08, 0.24, 1),height .56s cubic-bezier(0.52, 0.16, 0.24, 1);
  header
    h 1rem
    display: flex;
    justify-content: space-between;
    .search
      @extends .flex-center;
      w 1rem
    .menu
      @extends .flex-center;
      w 1rem
    .logo
      pt .1rem
      img
        w 1rem
    i.icon-search
      color #6e6e6e
      fs 20px
      fw 700
    i.icon-menu
      color #6e6e6e
      fs 26px
  .content-abs-wrapper
    position: absolute;
    left 0
    right 0
    top 1rem


.header-holder--mask
  h 100%

.header-menu-wrapper
  ul
    pad .4rem .6rem
    pt .2rem
    border-top: 1px solid #292929;
  li
    lh .9rem
    border-bottom: 1px solid #292929;
  a 
    db()
    color #fff
    fs .3rem
  a:active
    color red
  .language
    pad 0 .6rem
    color #ccc
    .language-title
      pb .1rem
    .list
      dib()
      mr .2rem

.header-search-wrapper
  .search-input
    pad .3rem .6rem
    display: flex;
    input
      flex 1
    .search-btn
      flex 0 auto
      color #fff
      lh .7rem
      pl .2rem
    input
      border 0
      wh 100% .7rem
      background: #282828;
      border-radius: 28px;
      color #fff
      pl .2rem
      fs .28rem
  .hot
    pad .4rem .6rem;
  ul
    pt .2rem
  a
    color #fff
  li
    lh .9rem



.fade-enter-active{
  transition: all .45s .25s;
  transform: translateY(0);
  z-index: 3;
}
.fade-leave-active{
  transition: all .45s;
}
.fade-enter, .fade-leave-to{
  opacity: 0;
  transform: translateY(-10px);
}



