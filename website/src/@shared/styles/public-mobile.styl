.button-holder
  border 2px solid #bec1c3
  lh .6rem
  borr .4rem
  pad 0 .4rem
  fs .28rem
  min-width 2rem
  tc()
  dib()
  ov()
  rel()
  cur()
  font-def()
  &:active
    opacity .8
  &.button-holder--black
    border 2px solid #222
    color #222
    .mask
      background: #222;

  &.button-holder--red
    border 0
    background: #e01e3c
    color: #fff
    pt 2px
    pb 2px
    .mask
      background: #fff
  &.button-holder--red2
    border 0
    background: #e01e3c
    color: #fff
    pt 2px
    pb 2px
    .mask
      background: #222
  &.button-holder--big
    pl 60px
    pr 60px
  &.button-holder--disabled
    opacity: .5;
    background: #ccc;
    color #fff;


img
  max-height: 100%

/* 
  product-list 产品列表
 */

.product-list
  mt .2rem
  pad 0 .2rem
  .item-wrapper
    background: #fff;
    pad .8rem .2rem .4rem
    tc()
    mb .2rem
    .product-photos
      h 4rem
    .product-details
      pad .2rem 0
      fs .32rem


/* 
  header-back
 */
.body-padding-top
   pt 1.2rem
.header-back
  position: fixed;
  left: 0
  right: 0
  top: 1rem
  h 1rem
  ov()
  background: #ffffff
  border: 1px solid #e5e5e5
  z-index 90
  display: flex;
  .back-icon
    wh 1rem 1rem
    @extends .flex-center;
    flex 0 auto
    border-right: 1px solid #e5e5e5
  .back-content
    flex 1
    lh 1rem
    pl .2rem
    ov()
    p
      text-ov()

/* 
  footer
 */

footer.footer
  tc()
  color gray
  background: #f7f7f8;
  pad .8rem .3rem
  fs .20rem


/* 
  body-content
 */
.body-content
  mt .8rem
  background: #fff;
  pad .8rem .5rem
  h2
    fs .5rem
    tc()
    color #111
    mb .6rem
  .body-content-html
    fs .28rem
    img
      height auto


/* 
  section-nav
 */
.section-nav
  display: flex;
  background: #fff;
  mt .4rem
  mb .2rem
  whh 100% .9rem
  pad 0 .4rem
  .item
    db()
    flex: 1;
    tc()
    fs .30rem
    color #111
  .item.active
    rel()
    &:after
      content ''
      border-top: 2px solid #f66917;
      position: absolute;
      width: 1.6rem;
      left 50%;
      margin-left -.8rem;
      bottom: 0;


/* 
  article-list
 */
.article-list
  background: #fff;
  li
    border-bottom: 1px solid #f3f3f3;
    pad .2rem .3rem
    a
      db()
      pb .1rem
      fs .3rem
      color #111
  .time
    color #c7c7c7
    fs .24rem


.mescroll
  position: relative;
  overflow-y: scroll!important;
  -webkit-overflow-scrolling: touch;
