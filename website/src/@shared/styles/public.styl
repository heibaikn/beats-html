.pagination{
	text-align: center;
	li{
    display: inline-block;
    a{
      db()
      font-size: 14px;
      width: auto;
      line-height: 30px;
      padding: 0 12px;
      border: 1px solid #dcdee2;
      border-radius: 2px;
    }
