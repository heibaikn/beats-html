    flex 1;
    input
      background: #161616;
      border: 3px solid #161616;
      wh 100% 50px
      lh 50px
      borr 25px
      fs 24px
      pad 0 40px
      pt 6px
      color #fff
      font()
      &:focus
        border: 3px solid #8c8c8c;
  .search-close
    wh 40px 40px
    borr 50%
    border: 2px solid #363636;
    ml 50px
    cur()
    @extends .flex-center;
  .search-box
    abs left 0 right 0
    top 100%
    pt 80px
    background: #161616
    box-shadow: 0 13px 35px 0 rgba(0, 0, 0, 0.25);
    padding: 30px 40px 50px;
    mt 31px
    p
      mb 20px
      fs 14px
    li
      fl()
      mr 40px
      mb 10px
       border-bottom: 1px solid #161616
      &:hover
        border-bottom: 1px solid $red



.fade-enter-active, .fade-leave-active {
  transition: opacity .45s;
}
.fade-enter, .fade-leave-to {
  opacity: 0;
}

.animate-fade
  transition: all .95s
  transform: translateY(20px)
  opacity 0

$animateList = (1 .15s) (2 .19s) (3 .23s) (4 .27s) (5 .31s) (6 .35s) (7 .39s)

for ani in $animateList
  .animate-fade-active .animate-fade{ani[0]}
    animation: animate-fade-active .55s ani[1] forwards;


@keyframes animate-fade-active {
  form{
    transform: translateY(20px)
    opacity 0
  }
  to{
    transform: translateY(0)
    opacity 1
  }
}


