  left 0
  top 0
  right 0
  bottom 0
  z-index  20
  background rgba(0,0,0,.6)


.header-mask__body
  min-width 900px
  w 100%
  background rgba(0,0,0,.6)
  .container
    display: flex
    pt 97px
    img
      w 100%
  .header-mask__body__browse
    w 16%
    justify-content: left
    > div
      mt -40px
    .button-holder
      fs 16px
      lh 36px
    h2
      color: #fff;
      fs 20px
      font-weight 500
      mar 0 0 25px
      text-transform: none;
      font()
    li
      margin-bottom 25px
      color: #bec1c3;
      fs 16px
      white-space nowrap
      font-A()
      > a
        rel()
        &:after
          content ''
          abs left 50% bottom -3px
          wh 20px 3px
          ml -10px
          background: red;
          transition: all .35s
          transform: scale(0)
        &:hover:after
          transform: scale(1)

  .header-mask__body__group 
    w 83%
    white-space:nowrap
    fs 0
    .image-wrapper
      fl()
      dib()
      rel()
      w 20%
      pad 0 20px 20px 0
      &:after
        content ' '
        fl()
        pt 100%
      .image__content
        pad 0 18%
        background: #fff
        abs3 left 0 top 0 right 20px
        bottom 20px
        @extends .flex-center
        flex-direction: column
        span
          fs 14px
          color #222
          tc()
          db()
          mt 10px
      &:last-child
        .image__content
          borr 50%
          ov()
          > span
            abs left 0 top 0
            wh 100% 100%
            background rgba(0,0,0,.5)
            fs 14px
            color #fff
            borr 50%
            mar 0
            @extends .flex-center
    .main-img
      w 40%
      pad 0 20px 20px 0
      rel()
      &:after
        pt 0
      p
        color #a7a6a6
        w 100%
        fs 14px
        font()
        pt 20px
        tc()

.header-search
  position: fixed;
  left 0
  right 0
  bottom 0
  top 0
  background: rgba(26, 27, 28, 0.9)
  z-index: 30
  > .container
    max-width: 1180px;
    margin: 0 calc(7.5% - -120px);
    display: flex;
    justify-content: center;
    align-items: center;
    height 80px
    rel()
