


@font-face{
 font-family: 'NeuzeitGro';
 src: url('~@shared/styles/font/NeuzeitGro-Bol.ttf'), url('~@shared/styles/font/NeuzeitGro-Bol.woff');
}

@font-face{
 font-family: 'AlternateGotNo2D';
 src: url('~@shared/styles/font/AlternateGotNo2D.ttf'), url('~@shared/styles/font/AlternateGotNo2D.woff');
}

font()
  font-family  "NeuzeitGro", "Helvetica Neue", "Helvetica", sans-serif
font-def()
  font-family: '微软雅黑'
font-A()
  font-family "AlternateGotNo2D"
full()
  wh 100% 100%

body
  color #222
  min-width 1100px
  padding-top 50px
  font-def()
  background: #f7f7f8;

body.hidden
  wh 100% 100%
  overflow hidden

h3
  font-family 'NeuzeitGro'

img
  max-width: 100%;

a
  color inherit

.iconfont
  fs 22px

.flex-center
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;

.container
  w 85%
  margin 0 auto
  max-width 1500px

.section-container
  margin 0 auto;

.button-holder
  border 2px solid #bec1c3
  lh 39px
  borr 22px
  pad 0 38px
  fs 18px
  tc()
  dib()
  ov()
  rel()
  cur()
  font-def()
  .mask
    abs left 0 top 0
    db()
    background: #bec1c3
    wh 100% 100%
    z-index 1
    transition all .35s
    transform: translateY(100%)
  .button-inner
    rel()
    z-index 2
    transition all .35s
  &:hover .button-inner
    color #222
  &:hover .mask
    transform: translateY(0)
  &.button-holder--black
    border 2px solid #222
    color #222
    .mask
      background: #222;
    &:hover .button-inner
      color #fff
  &.button-holder--red
    border 0
    background: #e01e3c
    color: #fff
    pt 2px
    pb 2px
    .mask
      background: #fff
    &:hover .button-inner
      color #222
  &.button-holder--red2
    border 0
    background: #e01e3c
    color: #fff
    pt 2px
    pb 2px
    .mask
      background: #222
    &:hover .button-inner
      color #fff
  &.button-holder--big
    pl 60px
    pr 60px
  &.button-holder--disabled
    opacity: .5;
    background: #ccc;
    color #fff;

header#header
  h 80px
  pad 20px 0 0
  background-color #161616
  color #fff
  position fixed
  left: 0
  right: 0
  top: 0
  min-width 900px
  z-index: 99
  > .container
    rel()
    h 40px
  .logo
    abs left 0 top 0
    z-index 99
  .right-icon
    abs right 0 top 0
    z-index 21
    cur()
    h 100%
    i{
      fs 18px
      fw 700
    }
  nav
    fs 18px
    flex-center()
    ul
      pad 7px 40px 0 70px
    li
      fl()
      w 130px
      tc()
    .hover a
        rel()
        &:after
          content ''
          db()
          wh 35px 3px
          background: $red;
          abs3 left 0 right 0 bottom -10px
          mar 0 auto
          transition:  all .35s
          opacity: 0;
          transform: translateY(10px)
        &:hover:after
          transform: translateY(0)
          opacity: 1;
      &.active a:after
        transform: translateY(0)
        opacity: 1;

      i
        color #ccc
        vertical-align: top
        dib()
        transition: all .35s
      .arrow-active
        transform: rotate(180deg);
        color: $red;
    li.last
      w 12%
      i{
        fs 26px
      }

.header-mask
