@import '~@shared/stylus/common.styl'
@import '~@shared/styles/public.styl'

img
  max-width 100%
  max-height 100%

body
  pt 80px

#main-content
  mar 0 auto
  pad 50px
  pb 200px
  box-shadow none

.job-center
  width: 730px;
  mar 0 auto
  p
    mb 10px

.search-list-content
  pt 60px
  .item
    wh 270px 270px
    fl()
    pad 10px
    mr 20px
    mb 30px
    background: #fff
    borr(50%)
    pt 20px
    ov()
    tc()
    .img
      mar 0 auto
      transition: all .35s
    .info
      pt 20px
      notwrap()
  .item:hover
    .img
      transform: scale(1.1)
  &:after
    content ''
    db()
    clear: both;

  
.category
  background: #fff;
  pad 20px
  borr 4px
  display: flex
  > .label
    flex 0 auto
    pt 10px
    pl 10px
  .category-list
    flex 1
    pl 50px
    .item
      fl()
      pad 10px 30px
      mr 20px
      mb 10px
      cur()
      bor 1px solid #fff
      borr 4px
      rel();
    .item.active
      bor 1px solid #e01e3c
      color: #e01e3c
      &:after
        content: '';
        border-left: 6px solid transparent; 
        border-right: 6px solid transparent; 
        border-top: 6px solid #e01e3c;
        abs left 50% bottom -6px
        ml -6px

  .category-list-children
    pl 80px
    pt 10px
    .item
      fl()
      mr 20px
      cur()
    .item.active
      color: #e01e3c


.product
  mt 50px
  .loading, .empty
    background: #fff
    whh 100% 300px
    tc()